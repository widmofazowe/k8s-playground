apiVersion: apps/v1
kind: Deployment
metadata:
  name: den
  namespace: default
spec:
  replicas: 2
  selector:
    matchLabels:
      name: den
  template:
    metadata:
      labels:
        name: den
    spec:
      containers:
      - name: den
        image: den:latest
        imagePullPolicy: Never
---
apiVersion: v1
kind: Service
metadata:
  name: den-service
spec:
  type: ClusterIP
  selector:
    app: den
  ports:
    - name: http
      protocol: TCP
      port: 80
      targetPort: 8080